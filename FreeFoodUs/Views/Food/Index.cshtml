@model dynamic
@{
    ViewBag.Title = "food";
    ViewBag.Nav = "food";
}
<h1>Hello Friend!</h1>
<p>Tell us more about your needs and we'll see what we can do.</p>
<form action="/food/finder" method="post">
    <div>
        <div class="clearfix">
            <div class="pull-left" style="width:20%"><label>Your postcode</label></div><div class="pull-left"><input type="text" name="postcode" /></div>
        </div>
        <div class="clearfix">
            <div class="pull-left" style="width:20%"><label for="people">People that need a meal</label></div><div class="pull-left"><input type="number" name="people" value="2" /></div>
        </div>
        <div class="clearfix">
            <div class="pull-left" style="width:20%"><label for="meals">Number of meals</label></div><div class="pull-left"><input type="number" name="meals" value="1" /></div>
        </div>
        <div class="clearfix">
            <div class="pull-left" style="width:20%"><input type="submit" value="Find free food" /></div>
        </div>
    </div>
</form>
